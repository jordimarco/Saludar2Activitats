<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.eseiaat.pma.exemples.saludar2activitats.FirstActivity">

    <EditText
        android:id="@+id/editTextNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/introdueixNom"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonSaludar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:onClick="saludar"
        android:text="@string/saludar" />
</RelativeLayout>
